pipeline {
    agent any

    environment {
        MAGENTO_AUTH = credentials('magento-marketplace-auth')
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Docker Cleanup') {
            steps {
                sh '''
                docker stop $(docker ps -aq) || true
                docker rm -f $(docker ps -aq) || true
                docker network prune -f || true
                docker volume prune -f || true
                docker image prune -af || true
                '''
            }
        }

        stage('Start Docker Services') {
            steps {
                sh 'docker compose up -d'
            }
        }

        stage('Composer Auth Setup') {
            steps {
                sh """
                mkdir -p src/auth

                cat > src/auth/auth.json << 'EOF'
{
  "http-basic": {
    "repo.magento.com": {
      "username": "__USERNAME__",
      "password": "__PASSWORD__"
    }
  }
}
EOF

                sed -i "s/__USERNAME__/${MAGENTO_AUTH_USR}/" src/auth/auth.json
                sed -i "s/__PASSWORD__/${MAGENTO_AUTH_PSW}/" src/auth/auth.json

                chmod 600 src/auth/auth.json
                """
            }
        }

        stage('Install Magento Code (Composer)') {
            steps {
                sh '''
                echo "===== INSTALLING MAGENTO VIA COMPOSER (INSIDE PHP CONTAINER) ====="

                docker exec magento-php bash -lc "
                    cp /var/www/html/src/auth/auth.json /var/www/html/auth.json

                    composer create-project \
                        --repository-url=https://repo.magento.com/ \
                        magento/project-community-edition=2.4.8-p3 /var/www/html
                "
                '''
            }
        }

        stage('Install Magento System') {
            steps {
                sh '''
                docker exec magento-php php bin/magento setup:install \
                    --base-url=http://localhost:8090 \
                    --db-host=mariadb \
                    --db-name=magento \
                    --db-user=root \
                    --db-password=root123 \
                    --backend-frontname=admin \
                    --search-engine=opensearch \
                    --opensearch-host=opensearch \
                    --opensearch-port=9200 \
                    --amqp-host=rabbitmq \
                    --amqp-user=magento \
                    --amqp-password=magento123
                '''
            }
        }

        stage('Magento Post-Install Tasks') {
            steps {
                sh '''
                docker exec magento-php php bin/magento cache:flush
                docker exec magento-php php bin/magento cache:clean
                docker exec magento-php php bin/magento setup:di:compile
                docker exec magento-php php bin/magento setup:static-content:deploy -f
                '''
            }
        }
    }

    post {
        success {
            echo "Magento available at: http://localhost:8090"
        }
        failure {
            echo "Pipeline failed â€” check console output."
        }
    }
}
