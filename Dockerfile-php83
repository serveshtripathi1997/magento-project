FROM php:8.3-fpm

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git unzip libicu-dev libxml2-dev libxslt1-dev libonig-dev \
    libzip-dev libpng-dev libjpeg62-turbo-dev libfreetype6-dev \
    libcurl4-openssl-dev pkg-config libssl-dev libxslt1.1 \
    zlib1g-dev libbz2-dev libreadline-dev libsqlite3-dev wget \
    libmcrypt-dev libaio1 build-essential libmagickwand-dev --no-install-recommends

# Configure GD
RUN docker-php-ext-configure gd \
    --with-jpeg \
    --with-freetype 

# Install PHP Extensions required by Magento
RUN docker-php-ext-install \
    intl \
    xsl \
    zip \
    bcmath \
    soap \
    gd \
    pdo_mysql \
    opcache \
    sockets

# Composer
COPY --from=composer:2.8 /usr/bin/composer /usr/bin/composer

# NodeJS (optional, useful for frontend tasks)
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs

WORKDIR /var/www/html
